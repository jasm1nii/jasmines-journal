{% set tag_filter = '<br><p><b><i><u><strong><em>' %}

<section class="h-entry">
    <h3 class='p-name'>
        <time datetime='{{ published|date() }}'><a href='/blog/notes/{{ slug }}'>{{ published }}</a></time>
    </h3>
    <section class='e-content'>
        {% if block('content')|length > 250 %}
            {{ block('content')[:250]|striptags(tag_filter)|raw }} &hellip;
        {% else %}
            {{ block('content')|striptags(tag_filter)|raw }}
        {% endif %}
    </section>
</section>