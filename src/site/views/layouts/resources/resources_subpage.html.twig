<!DOCTYPE html>
<html lang="en-US">
    <head>
        {{ include('@includes/head.shtml') }}
        <title>{{ title }} | jasmine's resources</title>
        <meta name="description" content="a catalogue of helpful things for web design, art, and more!"/>
        <meta name="author" content="jasm1nii"/>
        <meta name="keywords" content="design resources, web development"/>
        <link id="base-theme" href="/_assets/stylesheets/resources_subpage.css" rel="stylesheet"   type="text/css" media="all"/>
        <noscript>
            <link href="/_assets/stylesheets/resources_subpage_noscript.css" rel="stylesheet" type="text/css" media="all"/>
        </noscript>
    </head>
    <body>
        <div id="layout">
            <header>
                <hgroup>
                    <p>jasmine's resources</p>
                    {% if parent_name is defined %}
                        <p id="parent-category-name">{{ parent_name }}</p>
                    {% endif %}
                    <h1>{{ title }}</h1>
                    <p>
                        last updated: <time datetime="{{ updated|date() }}">{{ updated|format_date(pattern="d MMMM Y")|lower }}</time>
                    </p>
                </hgroup>
                <nav>
                    {{ include('@includes/headernav.shtml') }}
                </nav>
            </header>
            <main>
                <article>
                    <aside id="legend">
                        <details>
                            <summary>
                                show legend
                            </summary>
                            {% apply markdown_to_html %}
                                {{ include('_legend.md') }}
                            {% endapply %}
                        </details>
                    </aside>
                    {% if parent != null %}
                        <nav>
                            return to <a href="{{ parent }}">{{ parent }}</a>
                        </nav>
                    {% endif %}
                    {{ content != null ? content|raw : block('content') }}
                </article>
            </main>
        </div>
        <footer>
            {{ include('@includes/footer.shtml') }}
        </footer>
    </body>
</html>